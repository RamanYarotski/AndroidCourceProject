<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/rest_distanceTV"
        style="@style/text_view_info_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/rest_distance"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/progressBar"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/passed_distanceTV" />

    <TextView
        android:id="@+id/speedTV"
        style="@style/text_view_info_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/speed"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/passed_distanceTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/passed_distanceTV"
        app:layout_constraintTop_toTopOf="@+id/passed_distanceTV"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/passed_distanceTV"
        style="@style/text_view_info_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/passed_distance"
        app:layout_constraintBottom_toBottomOf="@+id/rest_distanceTV"
        app:layout_constraintEnd_toStartOf="@+id/speedTV"
        app:layout_constraintStart_toEndOf="@+id/rest_distanceTV"
        app:layout_constraintTop_toTopOf="@+id/rest_distanceTV" />


</androidx.constraintlayout.widget.ConstraintLayout>